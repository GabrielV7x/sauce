<div class="container py-4 vh-100">
  <h2 class="mb-3">Categories</h2>

  <div class="row my-2">
    <div class="col-md-4" data-aos="zoom-in">
      <div class="bg-white rounded shadow h-200 p-3">
        <h3>Emergency numbers</h3>
        <p>Your emergency numbers here!</p>
        <%= link_to "click here", emergencies_path,class: "btn-default" %>
      </div>
    </div>
  </div>

    <div class="row my-2">
    <div class="col-md-4" data-aos="zoom-in">
      <div class="bg-white rounded shadow h-200 p-3">
        <h3>First-aid guide</h3>
        <p>Your Aid guide here!</p>
        <%= link_to "click here", aids_path,class: "btn-default" %>
      </div>
    </div>
  </div>

    <div class="row my-2">
    <div class="col-md-4" data-aos="zoom-in">
      <div class="bg-white rounded shadow h-200 p-3">
        <h3>My location</h3>
        <p>Your live location here!</p>
        <%= link_to locations_path, data: { turbo: false } do %>
          <i class="fa-solid fa-solid fa-location-dot"></i>
        <% end %>
      </div>
    </div>
  </div>

</div>

<div class="container vh-100 mb-5 pb-5">
  <section id="step">
    <h2><%= @aid.name%></h2>
      <section class="cat__card">
        <% @steps.each do |step| %>
          <%= cl_image_tag step.photo.key, id:"step__img", :crop => "fit"%>
          <h3>STEP: <%= step.position %></h3>
          <p><%= step.description %></p>
        <% end %>
      </section>
  </section>
</div>
